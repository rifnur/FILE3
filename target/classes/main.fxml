<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<HBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="client.MainController">

    <VBox>
        <Text fx:id="textWindow" strokeType="OUTSIDE" strokeWidth="0.0" text="Сервер " textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font></Text>
        <ListView fx:id="filesListServer" VBox.vgrow="ALWAYS" />
        <Button onAction="#pressOnDownloadBtn" text="Скачать файл" />
        <Button onAction="#pressOnUpdateServer" text="Обновить список" />
    </VBox>
    <VBox>
        <Text fx:id="textWindowClient" strokeType="OUTSIDE" strokeWidth="0.0" text="Клиент " textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font></Text>
        <ListView fx:id="filesList" VBox.vgrow="ALWAYS" />
<!--        <Button onAction="#pressOnDeleteclientBtn" text="Удалить файл" />-->
<!--        <Button onAction="#pressOnUpdateClient" text="Обновить список" />-->
    </VBox>
</HBox>
